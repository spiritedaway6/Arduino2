<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.arduino.MainActivity"
    android:orientation="vertical"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#252325">

    <Button
        android:id="@+id/timein"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Time-in:"
        android:gravity="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/timeout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Time-out:"
        android:gravity="center"
        android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/pasok"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0:00"
        android:gravity="center"
        android:textSize="40dp" />

        <TextView
            android:id="@+id/uwi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:00"
            android:gravity="center"
            android:textSize="40dp" />

    </LinearLayout>

    <Button
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Add"
        android:id="@+id/add"
        />

    <LinearLayout
        android:id = "@+id/relativeLayout1"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background = "#727fde" >

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Time-in"
            android:textColor = "#000000" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1.5"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Time-out"
            android:textColor = "#000000" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1.5"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Hour(s)"
            android:textColor = "#0d0d0d" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Minute(s)"
            android:textColor = "#0a0909" />
    </LinearLayout>

    <ListView
        android:id = "@+id/listview"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background="#b4b17e"
        android:divider = "@null"/>

    <TextView
        android:id="@+id/totaloras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total hour(s): "/>

    <TextView
        android:id="@+id/totalminuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total minute(s): "/>

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>
